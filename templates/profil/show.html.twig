{% extends 'base.html.twig' %}

{% block title %}
    {% if isOwnProfile %}
        Mon Profil - ENI Sorties
    {% else %}
        Profil de {{ user.prenom }} {{ user.nom }} - ENI Sorties
    {% endif %}
{% endblock %}

{% block body %}
<div class="container-fluid py-3">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        {% if isOwnProfile %}
                            Mon Profil
                        {% else %}
                            Profil de {{ user.prenom }} {{ user.nom }}
                        {% endif %}
                    </h4>
                    {% if isOwnProfile %}
                        <a href="{{ path('app_profil_edit') }}" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i>Modifier
                        </a>
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="mb-3">
                                {% if user.photo %}
                                    <img src="{{ asset('uploads/photos/' ~ user.photo) }}" 
                                         alt="Photo de profil" 
                                         class="img-thumbnail rounded-circle" 
                                         style="width: 150px; height: 150px; object-fit: cover;">
                                {% else %}
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 150px; height: 150px; margin: 0 auto;">
                                        <i class="fas fa-user fa-3x text-muted"></i>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Pseudo :</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ user.pseudo }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Prénom :</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ user.prenom }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Nom :</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ user.nom }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Email :</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ user.mail }}
                                </div>
                            </div>
                            {% if user.telephone %}
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Téléphone :</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ user.telephone }}
                                </div>
                            </div>
                            {% endif %}
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Campus :</strong>
                                </div>
                                <div class="col-sm-9">
                                    {{ user.site.nomSite }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% if not isOwnProfile %}
                <div class="card-footer">
                    <a href="{{ path('app_home') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Retour à l'accueil
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}