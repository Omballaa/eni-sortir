{% extends 'base.html.twig' %}

{% block title %}Modifier mon Profil - ENI Sorties{% endblock %}

{% block body %}
<div class="container-fluid py-3">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Modifier mon Profil
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="mb-3">
                                <label class="form-label">Photo actuelle</label>
                                {% if user.photo %}
                                    <div class="mb-2">
                                        <img src="{{ asset('uploads/photos/' ~ user.photo) }}" 
                                             alt="Photo de profil" 
                                             class="img-thumbnail rounded-circle" 
                                             style="width: 150px; height: 150px; object-fit: cover;">
                                    </div>
                                {% else %}
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-2" 
                                         style="width: 150px; height: 150px; margin: 0 auto;">
                                        <i class="fas fa-user fa-3x text-muted"></i>
                                    </div>
                                {% endif %}
                                {{ form_row(form.photo) }}
                                <small class="text-muted">
                                    Formats acceptés : JPEG, PNG, GIF, WebP (Max: 2MB)
                                </small>
                            </div>
                        </div>
                        
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.pseudo) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.site) }}
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.prenom) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.nom) }}
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.mail) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.telephone) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-lock me-2"></i>Modifier le mot de passe
                            </h5>
                            <p class="text-muted mb-3">
                                Laissez les champs vides si vous ne souhaitez pas changer votre mot de passe.
                            </p>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.plainPassword.first) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.plainPassword.second) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_profil_show') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Retour
                        </a>
                        {{ form_widget(form.submit) }}
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Prévisualisation de l'image
    const photoInput = document.querySelector('input[type="file"]');
    if (photoInput) {
        photoInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const existingImg = document.querySelector('.img-thumbnail');
                    if (existingImg) {
                        existingImg.src = e.target.result;
                    } else {
                        // Créer une nouvelle image si pas d'image existante
                        const defaultIcon = document.querySelector('.fa-user');
                        if (defaultIcon && defaultIcon.parentElement) {
                            const newImg = document.createElement('img');
                            newImg.src = e.target.result;
                            newImg.alt = 'Prévisualisation';
                            newImg.className = 'img-thumbnail rounded-circle';
                            newImg.style.cssText = 'width: 150px; height: 150px; object-fit: cover;';
                            defaultIcon.parentElement.replaceWith(newImg);
                        }
                    }
                };
                reader.readAsDataURL(file);
            }
        });
    }
});
</script>
{% endblock %}