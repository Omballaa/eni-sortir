<div class="modal-header">
    <h5 class="modal-title">
        <i class="bi bi-pencil"></i> Modifier mon profil
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

{{ form_start(form, {
    'attr': {
        'id': 'profil-edit-form', 
        'data-action': path('app_profil_edit_modal', {'id': user.id}),
        'novalidate': 'novalidate',
        'enctype': 'multipart/form-data'
    }
}) }}

<div class="modal-body">
    <div class="row">
        <div class="col-md-4 text-center">
            <div class="mb-3">
                <label class="form-label">Photo actuelle</label>
                {% if user.photo %}
                    <div class="mb-2">
                        <img src="{{ asset('uploads/photos/' ~ user.photo) }}" 
                             alt="Photo de profil" 
                             class="img-thumbnail rounded-circle" 
                             style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                {% else %}
                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-2" 
                         style="width: 150px; height: 150px; margin: 0 auto;">
                        <i class="bi bi-person fa-3x text-muted"></i>
                    </div>
                {% endif %}
                {{ form_row(form.photo) }}
                <small class="text-muted">
                    Formats accept√©s : JPEG, PNG, GIF, WebP (Max: 2MB)
                </small>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.pseudo) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.site) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.nom) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.mail) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.telephone) }}
                </div>
            </div>
        </div>
    </div>
    
    <hr class="my-4">
    
    <div class="row">
        <div class="col-12">
            <h6 class="mb-3">
                <i class="bi bi-lock"></i> Modifier le mot de passe
            </h6>
            <p class="text-muted mb-3">
                Laissez les champs vides si vous ne souhaitez pas changer votre mot de passe.
            </p>
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.plainPassword.first) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.plainPassword.second) }}
                </div>
            </div>
        </div>
    </div>
    
    <div id="form-result" class="mt-3"></div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="bi bi-x-circle"></i> Annuler
    </button>
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-circle"></i> Enregistrer
    </button>
</div>

{{ form_end(form) }}