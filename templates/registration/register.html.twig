{% extends 'base_public.html.twig' %}

{% block title %}Créer un compte - Sortir ENI{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles pour la validation en temps réel */
        .validation-feedback {
            display: block;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        
        .valid-feedback {
            color: #198754;
        }
        
        .invalid-feedback {
            color: #dc3545;
        }
        
        .loading-feedback {
            color: #0d6efd;
        }
        
        .is-valid {
            border-color: #198754;
            box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
        }
        
        .is-invalid {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }
        
        .is-validating {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
        
        .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100">
        <div class="col-md-8 col-lg-6 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h1 class="h3 mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>
                        Créer un compte
                    </h1>
                    <p class="mb-0 mt-2">Rejoignez la communauté Sortir ENI</p>
                </div>

                <div class="card-body p-4">
                    {% for flash_message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            {{ flash_message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    {% for flash_message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            {{ flash_message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    {{ form_start(registrationForm, {'attr': {'id': 'registrationForm', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                            {{ form_errors(registrationForm.prenom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                            {{ form_errors(registrationForm.nom) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.pseudo, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur unique', 'autocomplete': 'username'}}) }}
                        {{ form_errors(registrationForm.pseudo) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.mail, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.mail, {'attr': {'class': 'form-control', 'placeholder': 'votre.email@example.com', 'autocomplete': 'email'}}) }}
                        {{ form_errors(registrationForm.mail) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control', 'placeholder': '06 12 34 56 78'}}) }}
                            {{ form_errors(registrationForm.telephone) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.site, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.site, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(registrationForm.site) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Minimum 8 caractères', 'autocomplete': 'new-password'}}) }}
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Répétez le mot de passe', 'autocomplete': 'new-password'}}) }}
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-secondary btn-lg" disabled>
                            <i class="bi bi-hourglass"></i>
                            Complétez le formulaire
                        </button>
                    </div>

                    {{ form_end(registrationForm) }}

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted mb-2">Vous avez déjà un compte ?</p>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Se connecter
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    En créant un compte, vous acceptez les conditions d'utilisation de Sortir ENI.
                </small>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/register.js') }}"></script>
{% endblock %}