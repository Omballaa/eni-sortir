<!DOCTYPE html>
<html{% if app.environment == 'dev' %} data-env-dev{% endif %}>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ENI Sortir{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        {# Bootstrap CSS via CDN - Version 5.3 #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        
        {# Icônes Bootstrap #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        
        {% block stylesheets %}
            {# Aucun CSS personnalisé - uniquement Bootstrap #}
        {% endblock %}

        {% block javascripts %}
            {# Bootstrap JS via CDN #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
            
            {# Utils.js - Fonctions utilitaires pour toasts, modales et AJAX #}
            <script src="{{ asset('js/utils.js') }}"></script>
            
            {# Modales spécialisées #}
            <script src="{{ asset('js/profil.modal.js') }}"></script>
            <script src="{{ asset('js/sortie.modal.js') }}"></script>
            

        {% endblock %}
    </head>
    <body>
        {# Navigation Bootstrap #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <i class="bi bi-calendar-event"></i> ENI Sortir
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">
                                <i class="bi bi-house"></i> Accueil
                            </a>
                        </li>
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="bi bi-calendar-plus"></i> Sorties
                                </a>
                            </li>

                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_admin_dashboard') }}">
                                        <i class="bi bi-gear"></i> Administration
                                    </a>
                                </li>
                            {% endif %}
                        {% endif %}
                    </ul>
                    <ul class="navbar-nav">
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> {{ app.user.prenom }} {{ app.user.nom }}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <span class="badge bg-warning text-dark ms-1">Admin</span>
                                    {% endif %}
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#" onclick="openProfilModal({{ app.user.id }})">
                                        <i class="bi bi-person"></i> Mon profil
                                    </a></li>
                                    <li><a class="dropdown-item" href="#" onclick="openProfilEditModal({{ app.user.id }})">
                                        <i class="bi bi-pencil"></i> Modifier mon profil
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                                    </a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">
                                    <i class="bi bi-box-arrow-in-right"></i> Connexion
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        {# Contenu principal #}
        <main class="container mt-4">
            {% block body %}{% endblock %}
        </main>

        {# Popup de messagerie globale #}
        {% include 'includes/messenger_popup.html.twig' %}

        {# Footer Bootstrap #}
        <footer class="bg-light mt-5 py-4">
            <div class="container">
                <div class="text-center text-muted">
                    <p>&copy; {{ "now"|date("Y") }} ENI Sortir - Application de gestion des sorties</p>
                </div>
            </div>
        </footer>
    </body>
</html>
