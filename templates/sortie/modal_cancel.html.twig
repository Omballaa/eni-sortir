<div class="modal-header">
    <h5 class="modal-title text-danger">
        <i class="bi bi-exclamation-triangle"></i> Annuler la sortie
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

{{ form_start(form, {
    'attr': {
        'id': 'sortie-cancel-form',
        'data-action': path('app_sortie_cancel', {'id': sortie.id}),
        'novalidate': 'novalidate'
    }
}) }}

<div class="modal-body">
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        <strong>Attention !</strong> Vous êtes sur le point d'annuler la sortie suivante :
    </div>
    
    <div class="card">
        <div class="card-body">
            <h6 class="card-title">{{ sortie.nom }}</h6>
            <p class="card-text">
                <i class="bi bi-calendar"></i> {{ sortie.dateHeureDebut|date('d/m/Y à H:i') }}<br>
                <i class="bi bi-geo-alt"></i> {{ sortie.lieu.nomLieu }}, {{ sortie.lieu.ville.nomVille }}<br>
                <i class="bi bi-people"></i> {{ sortie.inscriptions|length }} participant(s) inscrit(s)
            </p>
        </div>
    </div>
    
    {% if sortie.inscriptions|length > 0 %}
        <div class="alert alert-info mt-3">
            <i class="bi bi-info-circle"></i>
            <strong>Impact :</strong> {{ sortie.inscriptions|length }} participant(s) inscrit(s) 
            seront automatiquement désinscrits et recevront une notification d'annulation.
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Participants qui seront notifiés :</h6>
            </div>
            <div class="card-body" style="max-height: 200px; overflow-y: auto;">
                {% for inscription in sortie.inscriptions %}
                    <span class="badge bg-secondary me-1 mb-1">
                        {{ inscription.participant.prenom }} {{ inscription.participant.nom }}
                    </span>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    
    <div class="mt-3">
        {{ form_row(form.motifAnnulation, {
            'label': 'Motif d\'annulation *',
            'attr': {
                'placeholder': 'Expliquez brièvement pourquoi vous annulez cette sortie...',
                'rows': 4
            }
        }) }}
        <small class="text-muted">Ce motif sera communiqué aux participants inscrits.</small>
    </div>
    
    <div class="form-check mt-3">
        <input class="form-check-input" type="checkbox" id="confirm-cancel" required>
        <label class="form-check-label" for="confirm-cancel">
            <strong>Je confirme vouloir annuler définitivement cette sortie</strong>
        </label>
    </div>
    
    <div id="form-result" class="mt-3"></div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
        <i class="bi bi-arrow-left"></i> Retour
    </button>
    <div class="ms-auto">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirmer l'annulation
        </button>
    </div>
</div>

{{ form_end(form) }}

<script>
// Validation de la confirmation avant soumission
document.getElementById('sortie-cancel-form').addEventListener('submit', function(e) {
    const confirmCheckbox = document.getElementById('confirm-cancel');
    const motifField = document.getElementById('{{ form.motifAnnulation.vars.id }}');
    
    if (!confirmCheckbox.checked) {
        e.preventDefault();
        showToast('Veuillez confirmer l\'annulation', 'warning');
        confirmCheckbox.focus();
        return false;
    }
    
    if (motifField.value.trim().length < 10) {
        e.preventDefault();
        showToast('Le motif doit contenir au moins 10 caractères', 'warning');
        motifField.focus();
        return false;
    }
    
    // Double confirmation
    if (!confirm('Êtes-vous absolument certain de vouloir annuler cette sortie ? Cette action est irréversible.')) {
        e.preventDefault();
        return false;
    }
});
</script>