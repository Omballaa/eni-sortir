{% extends 'base.html.twig' %}

{% block title %}{{ sortie.nom }} - ENI Sorties{% endblock %}

{% block body %}
<div class="container-fluid py-3">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>{{ sortie.nom }}
                    </h4>
                    <div>
                        <span class="badge 
                            {% if sortie.etat.libelle == 'Créée' %}bg-secondary
                            {% elseif sortie.etat.libelle == 'Ouverte' %}bg-success
                            {% elseif sortie.etat.libelle == 'Clôturée' %}bg-warning text-dark
                            {% elseif sortie.etat.libelle == 'En cours' %}bg-primary
                            {% elseif sortie.etat.libelle == 'Passée' %}bg-info
                            {% elseif sortie.etat.libelle == 'Annulée' %}bg-danger
                            {% else %}bg-light text-dark{% endif %}
                            fs-6">
                            {{ sortie.etat.libelle }}
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Informations de la sortie -->
                        <div class="col-md-6">
                            <h5>Informations générales</h5>
                            
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Date et heure :</strong></div>
                                <div class="col-sm-7">{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Date limite d'inscription :</strong></div>
                                <div class="col-sm-7">{{ sortie.dateLimiteInscription|date('d/m/Y') }}</div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Nombre de places :</strong></div>
                                <div class="col-sm-7">
                                    {{ sortie.nbInscriptions }} / {{ sortie.nbInscriptionsMax }}
                                    {% if sortie.isComplete %}
                                        <span class="badge bg-danger ms-1">Complet</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            {% if sortie.duree %}
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Durée :</strong></div>
                                <div class="col-sm-7">{{ sortie.duree }} minutes</div>
                            </div>
                            {% endif %}
                            
                            {% if sortie.infosSortie %}
                            <div class="row mb-2">
                                <div class="col-sm-12">
                                    <strong>Description et infos :</strong>
                                    <div class="mt-1 text-muted">{{ sortie.infosSortie|nl2br }}</div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                        
                        <!-- Lieu et organisateur -->
                        <div class="col-md-6">
                            <h5>Lieu et organisateur</h5>
                            
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Ville organisatrice :</strong></div>
                                <div class="col-sm-7">{{ sortie.organisateur.site.nomSite }}</div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Lieu :</strong></div>
                                <div class="col-sm-7">{{ sortie.lieu.nomLieu }}</div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Rue :</strong></div>
                                <div class="col-sm-7">{{ sortie.lieu.rue ?: 'Non renseignée' }}</div>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Code postal :</strong></div>
                                <div class="col-sm-7">{{ sortie.lieu.ville.codePostal }}</div>
                            </div>
                            
                            {% if sortie.lieu.latitude and sortie.lieu.longitude %}
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Latitude :</strong></div>
                                <div class="col-sm-7">{{ sortie.lieu.latitude }}</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Longitude :</strong></div>
                                <div class="col-sm-7">{{ sortie.lieu.longitude }}</div>
                            </div>
                            {% endif %}
                            
                            <div class="row mb-2">
                                <div class="col-sm-5"><strong>Organisateur :</strong></div>
                                <div class="col-sm-7">
                                    <a href="{{ path('app_profil_show', {id: sortie.organisateur.id}) }}" 
                                       class="text-decoration-none">
                                        {{ sortie.organisateur.prenom }} {{ sortie.organisateur.nom }}
                                    </a>
                                    {% if isOrganisateur %}
                                        <span class="badge bg-warning text-dark ms-1">Vous</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    {% if sortie.inscriptions|length > 0 %}
                    <hr class="my-4">
                    <h5>Liste des participants inscrits :</h5>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Pseudo</th>
                                    <th>Nom</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for inscription in sortie.inscriptions %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_profil_show', {id: inscription.participant.id}) }}" 
                                           class="text-decoration-none">
                                            {{ inscription.participant.pseudo }}
                                        </a>
                                    </td>
                                    <td>{{ inscription.participant.prenom }} {{ inscription.participant.nom }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% endif %}
                </div>
                
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Retour
                        </a>
                        
                        <div>
                            {% if isOrganisateur %}
                                <!-- Actions pour l'organisateur -->
                                {% if sortie.etat.libelle in ['Créée', 'Ouverte'] %}
                                    <a href="{{ path('app_sortie_edit', {id: sortie.id}) }}" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Modifier
                                    </a>
                                {% endif %}
                                
                                {% if sortie.etat.libelle == 'Créée' %}
                                    <form method="post" action="{{ path('app_sortie_publish', {id: sortie.id}) }}" class="d-inline">
                                        <button type="submit" class="btn btn-success btn-sm" 
                                                onclick="return confirm('Êtes-vous sûr de vouloir publier cette sortie ?')">
                                            <i class="fas fa-share me-1"></i>Publier
                                        </button>
                                    </form>
                                {% endif %}
                                
                                {% if sortie.etat.libelle in ['Créée', 'Ouverte', 'Clôturée'] %}
                                    <a href="{{ path('app_sortie_cancel', {id: sortie.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-times me-1"></i>Annuler
                                    </a>
                                {% endif %}
                                
                                {% if sortie.etat.libelle == 'Créée' and sortie.nbInscriptions == 0 %}
                                    <form method="post" action="{{ path('app_sortie_delete', {id: sortie.id}) }}" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" 
                                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette sortie ?')">
                                            <i class="fas fa-trash me-1"></i>Supprimer
                                        </button>
                                    </form>
                                {% endif %}
                                
                                <!-- Actions d'inscription pour l'organisateur -->
                                {% if sortie.etat.libelle == 'Ouverte' %}
                                    {% if not isInscrit %}
                                        {% if sortie.inscriptions|length < sortie.nbInscriptionsMax %}
                                            <form method="post" action="{{ path('app_inscription_create', {id: sortie.id}) }}" class="d-inline">
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-user-plus me-1"></i>S'inscrire
                                                </button>
                                            </form>
                                        {% else %}
                                            <span class="text-muted">Sortie complète</span>
                                        {% endif %}
                                    {% else %}
                                        <form method="post" action="{{ path('app_inscription_delete', {id: sortie.id}) }}" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Êtes-vous sûr de vouloir vous désinscrire ?')">
                                                <i class="fas fa-user-minus me-1"></i>Se désinscrire
                                            </button>
                                        </form>
                                    {% endif %}
                                {% endif %}
                            {% else %}
                                <!-- Actions pour les autres participants -->
                                {% if sortie.etat.libelle == 'Ouverte' and sortie.isInscriptionOuverte %}
                                    {% if not isInscrit %}
                                        {% if not sortie.isComplete %}
                                            <form method="post" action="{{ path('app_inscription_create', {id: sortie.id}) }}" class="d-inline">
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-user-plus me-1"></i>S'inscrire
                                                </button>
                                            </form>
                                        {% else %}
                                            <span class="text-muted">Sortie complète</span>
                                        {% endif %}
                                    {% else %}
                                        <form method="post" action="{{ path('app_inscription_delete', {id: sortie.id}) }}" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Êtes-vous sûr de vouloir vous désinscrire ?')">
                                                <i class="fas fa-user-minus me-1"></i>Se désinscrire
                                            </button>
                                        </form>
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}