{% extends 'base_public.html.twig' %}

{% block title %}Connexion - ENI Sortir{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>
                        Connexion
                    </h4>
                    <p class="mb-0 mt-2 small">ENI Sortir - Espace Participants</p>
                </div>
                <div class="card-body p-4">
                    {% if error %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">
                                <i class="bi bi-person me-1"></i>Pseudo
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="username" 
                                   name="_username" 
                                   value="{{ last_username }}" 
                                   autocomplete="username" 
                                   required 
                                   autofocus
                                   placeholder="Votre pseudo">
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="bi bi-lock me-1"></i>Mot de passe
                            </label>
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   name="_password" 
                                   autocomplete="current-password" 
                                   required
                                   placeholder="Votre mot de passe">
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" 
                                   class="form-check-input" 
                                   id="remember_me" 
                                   name="_remember_me">
                            <label class="form-check-label" for="remember_me">
                                Se souvenir de moi
                            </label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Se connecter
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <div class="mb-2">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Besoin d'aide ? Contactez votre administrateur
                        </small>
                    </div>
                    <hr class="my-2">
                    <div>
                        <small class="text-muted me-2">Pas encore de compte ?</small>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-person-plus me-1"></i>
                            Cr√©er un compte
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}